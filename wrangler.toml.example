name = "github-slack-bot"
main = "src/index.ts"
compatibility_date = "2024-01-01"

[vars]
# Slack Bot OAuth Token
# SLACK_BOT_USER_OAUTH_TOKEN = "xoxb-your-slack-bot-token"

# Slack Bot User ID (optional, helps filter bot mentions in replies)
# SLACK_BOT_USER_ID = "U1234567890"

# GitHub Personal Access Token (needs repo scope)
# GITHUB_TOKEN = "ghp_your-github-token"

# GitHub repository details
# GITHUB_OWNER = "your-github-username-or-org"
# GITHUB_REPO = "your-repo-name"

# Worker URL for self-referencing (for progress checks)
# WORKER_URL = "https://your-worker-name.your-subdomain.workers.dev"


[[kv_namespaces]]
binding = "KV"
id = "your-kv-namespace-id"